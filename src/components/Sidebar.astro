---
import { SITE_TITLE, SITE_TAGLINE, LINKEDIN_URL, GITHUB_URL } from "../consts";

interface Props {
  activePath?: string;
}

const { activePath = "/" } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const isActive = (path: string) =>
  pathname === path || (path !== "/" && pathname.startsWith(path));
---

<aside class="sidebar">
  <div class="sidebar-inner">
    <a href="/" class="site-name">{SITE_TITLE}</a>
    <p class="tagline">{SITE_TAGLINE}</p>

    <nav class="main-nav">
      <a href="/" class:list={["nav-link", { active: isActive("/") }]}>Home</a>
      <a
        href="/blog"
        class:list={["nav-link", { active: pathname.startsWith("/blog") }]}
        >Blog</a
      >
      <a href="/about" class:list={["nav-link", { active: isActive("/about") }]}
        >About</a
      >
    </nav>

    <div class="sidebar-icons">
      <a
        href={LINKEDIN_URL}
        target="_blank"
        rel="noopener noreferrer"
        title="LinkedIn"
        aria-label="LinkedIn"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
